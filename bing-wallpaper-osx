#!/usr/bin/env python
import urllib
import json
import tempfile
import subprocess

SCRIPT = """/usr/bin/osascript<<END
tell application "Finder"
set desktop picture to POSIX file "%s"
end tell
END"""

def set_desktop_background(filename):
    subprocess.call(SCRIPT % filename, shell=True)

BASE_BING_URL = "https://www.bing.com"
market = "ja-JP"
BING_WP_API_URL = "%s/HPImageArchive.aspx?format=js&idx=0&n=1&mkt=%s" % (BASE_BING_URL, market)

response = json.loads(urllib.urlopen(BING_WP_API_URL).read())
wallpaper_url = "%s%s%s" % (BASE_BING_URL, response["images"][0]["urlbase"], "_UHD.jpg")

wallpaper_file = tempfile.NamedTemporaryFile(delete=False)
wallpaper_file.write(urllib.urlopen(wallpaper_url).read())
wallpaper_file.close()
set_desktop_background(wallpaper_file.name)
