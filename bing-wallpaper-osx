#!/usr/bin/env python
import urllib
import json
import tempfile
import subprocess

wallpaper_change_script = """/usr/bin/osascript<<END
tell application "Finder"
set desktop picture to POSIX file "%s"
end tell
END"""

def set_desktop_background(filename):
    subprocess.call(wallpaper_change_script % filename, shell=True)

bing_base = "https://www.bing.com"
market = "ja-JP"
bing_api = "%s/HPImageArchive.aspx?format=js&idx=0&n=1&mkt=%s" % (bing_base, market)

response = json.loads(urllib.urlopen(bing_api).read())
wallpaper_url = "%s%s%s" % (bing_base, response["images"][0]["urlbase"], "_UHD.jpg")

wallpaper_file = tempfile.NamedTemporaryFile(delete=False)
wallpaper_file.write(urllib.urlopen(wallpaper_url).read())
wallpaper_file.close()
set_desktop_background(wallpaper_file.name)
